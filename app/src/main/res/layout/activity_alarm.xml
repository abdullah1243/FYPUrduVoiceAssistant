<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Alarm">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:src="@drawable/logo"></ImageView>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:textAlignment="textStart"
        android:src="@drawable/rounded_chat"></ImageView>

    <TextView
        android:id="@+id/text_to_view"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="205dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textFontWeight="@integer/material_motion_duration_short_1"
        android:textSize="20dp"
        android:textStyle="bold"></TextView>

    <ImageView
        android:layout_width="380dp"
        android:layout_height="150dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="340dp"
        android:src="@drawable/rounded"></ImageView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/tick"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="270dp"
        ></ImageView>

    <ImageView
        android:layout_width="103dp"
        android:layout_height="89dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="250dp"
        android:src="@drawable/alarm"></ImageView>

    <EditText
        android:id="@+id/Hours"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="380dp"></EditText>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="420dp"
        android:text="Hours"
        android:textColor="@color/white"></TextView>

    <EditText
        android:id="@+id/Minutes"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="200dp"
        ></EditText>

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="420dp"
        android:text="Mins"
        android:textColor="@color/white"></TextView>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="500dp"
        android:src="@drawable/rounded_chat"></ImageView>

    <TextView
        android:id="@+id/setalarm"
        android:layout_width="214dp"
        android:layout_height="73dp"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="520dp"
        android:text="Set Alarm"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textStyle="bold"></TextView>



    <ImageView
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="570dp"
        android:src="@drawable/rounded"></ImageView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="575dp"
        android:src="@drawable/ic_baseline_send_24"></ImageView>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="575dp"
        android:src="@drawable/ic_baseline_mic_24"></ImageView>

    <ImageButton
        android:id="@+id/keyboard"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="270dp"
        android:layout_marginTop="575dp"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_baseline_keyboard_24"></ImageButton>


</RelativeLayout>